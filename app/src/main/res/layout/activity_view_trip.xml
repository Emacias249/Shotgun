<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.emanuel.shotgun.ViewTripActivity">

    <!-- REPLACE THIS WITH IMAGE FROM DB -->
    <TextView android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#aaaaaa"
        android:gravity="center"
        android:text="IMAGE PLACEHOLDER" />

    <!--   TRIP NAME   -->
    <TextView
        android:id="@+id/name"
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip to Yosemite" />

    <TextView
        android:id="@+id/location"
        style="@style/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yosemite, CA" />

    <TextView
        android:id="@+id/depart_time"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date to" />

    <TextView
        android:id="@+id/return_time"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/riders"
            style="@style/h2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="3 Riders" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@android:drawable/ic_input_add"/>

    </LinearLayout>


</LinearLayout>
